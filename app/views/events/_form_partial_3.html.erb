<div class="form">
  <div class="simple-form-for">
    <%= simple_form_for(@event) do |f| %>
      <%= f.error_notification %>
      <% event = @event %>
      <div class="form-inputs">
        <%= f.input :name, placeholder: "Event Name", input_html: { value: params[:name] || event.name}, as: :hidden  %>
        <%= f.input :organization, placeholder: "My organization", as: :hidden, input_html: { value: params[:organization] || event.organization }  %>
        <%= f.input :start_time, input_html: { value: params[event[:start_time]] || event.start_time}, as: :hidden %>
        <%= f.input :end_time, input_html: { value: params[:end_time] || event.end_time }, as: :hidden %>
        <%= f.input :address, placeholder: "Street, City, ZIP", input_html: { value: @address || params[:address] || event.address}, as: :hidden  %>
        <%= f.input :description, placeholder: "What kind of help do you need?", input_html: { value: params[:description] || event.description }, as: :hidden %>
        <%= f.input :capacity, input_html: { value: params[:capacity] || event.capacity}, as: :hidden  %>
        <%= f.input :tags, label: "This event is related to...", input_html: { value: params[:tags] || event.tags }, include_blank: false, as: :check_boxes, collection: Event::TAGS, class: 'check_boxes_submit' %>
        <%= f.input :photos, as: :attachinary, input_html: { value: params[:photos] || event.photos }  %>
        <%= f.input :source_event_id, as: :hidden, input_html: { value: params[:source_event_id] }  %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "actionBtn actionBtn--volunteasy" %>
      </div>
    <% end %>
    <br>
    <br>
    <%= link_to 'Back', events_path %>
  </div>
</div>
