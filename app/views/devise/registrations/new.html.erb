<div class="form-signup">

  <div class="row">
    <div class="col-xs-12">
        <div class="close-form">
            <%= link_to root_path do %>
            <i class="fa fa-times" aria-hidden="true"></i>
            <% end %>
        </div>

      <div class="row">
        <div class="col-xs-offset-1 col-xs-10">

            <div class="banner-content">
              <%= image_tag("Logo_green.png", class: 'logo-home') %>
              </div>
            </div>
        </div>
      </div>

<!--       <div class="row"> -->
        <div class="sign-up-content">
        <div class="col-xs-12">
        <div class="sign-for-free">
          <h3>Sign up for free!</h3>
          <p>To become a Volunteasyer, you need to sign up first.</p>
        </div>
        </div>
        <div class="col-xs-12">
        <div class="row">
        <div class="fb_or_form">
          <div class="input-group facebook-connect">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-facebook-square" aria-hidden="true"></i>
            </span>
            <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                <%= link_to "Sign up with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "form-control btn-fb btn-lg" %>
                  <% end -%>
            <% end -%>
          </div>



            </div>
            <div class="strike">
              <span>or</span>
            </div>

          <div class="fill-form">
                <div class="simple-form-for">
                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                   <%= f.error_notification %>

                   <div class="form-inputs">
                   <div class="input-group login-form">
                   <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                   <%= f.input :first_name, required: true, autofocus: true, placeholder:'First name', label: false,  input_html: { class: 'form-control btn-lg btn-login' } %>
                   </div>
                   <div class="input-group login-form">
                   <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                     <%= f.input :last_name, required: true, autofocus: true, placeholder:'Last name', label: false, input_html: { class: 'form-control btn-login' } %>
                     </div>
                     <div class="input-group login-form">
                     <span class="input-group-addon" id="basic-addon1"><i class="fa fa-envelope-o" aria-hidden="true"></i>
                    </span>
                   <%= f.input :email, required: true, autofocus: true, placeholder:'Email address', label: false, input_html: { class: 'form-control btn-login' } %>
                   </div>
                   <div class="input-group login-form">
                   <span class="input-group-addon" id="basic-addon1"><i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                   <%= f.input :password, required: true, placeholder:'Password', label: false, input_html: { class: 'btn-login form-control' } %>
                   </div>

                  </div>
                  <div class="form-actions">
                  <%= f.button :submit, "Create a free account", class: "form-control btn-free-account btn-lg" %>
                  </div>
                  <% end %>
              </div>
            </div>
              <br>
              <br>


            <div class="already_account_div">
            By creating this account, you agree to our Terms.
            <%= link_to "Already have an account? Login.", new_user_session_path, class: "already_account" %>



            </div>




        </div>
        </div>
        </div>
    <!--   </div> -->










            </div>





        </div>
      </div>












</div>

</div>






