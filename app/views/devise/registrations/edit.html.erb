<div class="form">
  <div class="simple-form-for">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true %>
        <%= f.input :last_name, required: true, autofocus: true %>
        <%= f.input :bio, autofocus: true %>
        <%= f.input :phone,  autofocus: true %>
        <%= f.input :address, autofocus: true %>
        <%= f.input :dob, autofocus: true %>
        <%= f.input :organization, autofocus: true %>
        <%= f.input :photo, as: :attachinary %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "actionBtn actionBtn--volunteasy" %>
      </div>
    <% end %>
    <br>
    <div class="strike">
      <span>Unhappy?</span>
    </div>
    <br>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "actionBtn actionBtn--cancel" %>
    <br>
    <br>
    <%= link_to "Back", :back %>
    <br>
    <br>
  </div>
</div>
