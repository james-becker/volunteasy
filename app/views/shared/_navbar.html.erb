<div class="navbar-wagon navbar-fixed-top" data-spy="affix" data-offset-top="150">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "volunteasy-logo.png", {id: "logo"}%>
  </a>

  <!-- Search form -->
  <div style="display: flex; justify-content: left;">
    <form action="" class="navbar-wagon-search">
    <input type="text" class="navbar-wagon-search-input input-lg" placeholder="Search">
      <button type="submit" class="navbar-wagon-search-btn btn-lg">
        <i class="fa fa-search"></i>
      </button>
    </form>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <% if user_signed_in? %>

    <!-- ///// Visible Links on Large Screens Only ///// -->
    <!-- <div class="hidden-xs hidden-sm"> -->
      <% if current_user %>
      <%= link_to "New event", new_event_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to user_events_path do %><span class="navbar-wagon-item navbar-wagon-link fa fa-calendar fa-2x"></span><% end %>

      <%= link_to "My profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to destroy_user_session_path, method: :delete do %><span class="navbar-wagon-item navbar-wagon-link fa fa-sign-out fa-2x"></span><% end %>
      <% end %>
    <!-- </div> -->

    <!-- ///// Avatar Dropdown Menu ///// -->
    <div class="navbar-wagon-item">
      <% if current_user.photo %>
      <% avatar_url = current_user.photo.path || "http://placehold.it/30x30" %>
      <% end %>
      <%= cl_image_tag avatar_url, width: 55, height: 55, crop: :fill, class: "avatar-large dropdown-toggle", id: "navbar-wagon-menu", data: { "toggle" => "dropdown"} %>

      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "New event", new_event_path, class: "navbar-wagon-item navbar-wagon-link" %> </li>
        <li><%= link_to "My events", user_events_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "My profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Log Out", destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete %></li>
      </ul>
    </div>
    <!-- //////////////////////////////// -->

    <% else %>

    <%= link_to "Log In", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Sign Up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>
  </div>


</div>

