
<div class="navbar-wagon navbar-fixed-top" data-spy="affix" data-offset-top="150">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "volunteasy-logo.png", {id: "logo"} %>
  </a>

  <!-- Search form, hidden on phone screens -->
  <div class="hidden-xs">
    <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>
  </div>

  <!-- Right Navigation -->
  <!-- LARGER SCREENS -->
  <div class="navbar-wagon-right hidden-xs">
    <% if current_user %>
        <div>
          <%= link_to new_event_path, class: "navbar-wagon-item navbar-wagon-link" do %>
            <span class="fa fa-plus-circle fa-1x"></span>  New Event
          <% end %>
        </div>
        <%= link_to user_events_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <span class="fa fa-calendar-check-o fa-1x"></span>  My Events
        <% end %>
        <%= link_to user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" do %>
          <span class="fa fa-user-circle-o fa-1x"></span>  Profile
        <% end %>
    <% else %>
        <%= link_to new_event_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <span class="fa fa-plus-circle fa-1x"></span>  New Event
        <% end %>
        <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
          Log In
        <% end %>
        <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
          Sign Up
        <% end %>
    <% end %>
  </div>

  <!-- PHONE SCREENS -->
  <div class="navbar-wagon-right hidden-sm hidden-md hidden-lg">
    <% if current_user %>
        <%= link_to new_event_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <span class="fa fa-plus-circle fa-2x"></span>
        <% end %>
        <%= link_to user_events_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <span class="fa fa-calendar-check-o fa-2x"></span>
        <% end %>
        <%= link_to user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" do %>
          <span class="fa fa-user-circle-o fa-2x"></span>
        <% end %>
    <% else %>
        <%= link_to new_event_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <span class="fa fa-plus-circle fa-2x"></span>
        <% end %>
        <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
          Log In
        <% end %>
        <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
          Sign Up
        <% end %>
    <% end %>
  </div>







